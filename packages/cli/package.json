{
  "name": "tscanner",
  "version": "0.0.2",
  "description": "High-performance TypeScript/TSX code quality scanner - CLI",
  "license": "MIT",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/lucasvtiradentes/tscanner.git"
  },
  "bin": {
    "tscanner": "./dist/tscanner.js"
  },
  "files": [
    "dist",
    "postinstall.cjs"
  ],
  "optionalDependencies": {
    "@tscanner/cli-linux-x64": "0.0.2",
    "@tscanner/cli-linux-arm64": "0.0.2",
    "@tscanner/cli-darwin-x64": "0.0.2",
    "@tscanner/cli-darwin-arm64": "0.0.2",
    "@tscanner/cli-win32-x64": "0.0.2"
  },
  "scripts": {
    "postinstall": "node postinstall.cjs",
    "build": "tsc && tsx scripts/copy-binaries.ts",
    "start": "node ./dist/tscanner.js",
    "typecheck": "tsc --noEmit",
    "lint": "biome check src",
    "lint:fix": "biome check --fix --unsafe src",
    "format": "biome format --write src scripts/*.ts",
    "prepublishOnly": "pnpm run build"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.0"
  }
}
