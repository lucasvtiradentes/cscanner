{
  "name": "cscan",
  "version": "1.0.3",
  "description": "High-performance TypeScript/TSX code quality scanner - CLI",
  "license": "MIT",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/lucasvtiradentes/cscan.git",
    "directory": "packages/cli"
  },
  "bin": {
    "cscan": "./dist/src/cscan.js"
  },
  "files": [
    "dist",
    "npm"
  ],
  "optionalDependencies": {
    "@cscan/linux-x64": "workspace:*",
    "@cscan/linux-arm64": "workspace:*",
    "@cscan/darwin-x64": "workspace:*",
    "@cscan/darwin-arm64": "workspace:*",
    "@cscan/win32-x64": "workspace:*"
  },
  "scripts": {
    "postinstall": "tsx ./scripts/safe-postinstall.ts",
    "build": "tsc && ./scripts/copy-binaries.sh",
    "start": "node ./dist/src/cscan.js",
    "typecheck": "tsc --noEmit",
    "lint": "biome check src scripts/*.ts",
    "format": "biome format --write src scripts/*.ts",
    "prepublishOnly": "pnpm run build"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.0"
  }
}
