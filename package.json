{
  "name": "lino",
  "private": true,
  "version": "1.0.0",
  "description": "High-performance TypeScript linting platform with custom rule support",
  "scripts": {
    "dev": "pnpm --filter lino-vscode dev",
    "build": "pnpm build:rust && pnpm build:extension",
    "build:extension": "pnpm --filter lino-vscode build",
    "build:rust": "./scripts/build-binaries.sh",
    "test": "pnpm --recursive test",
    "clean": "pnpm --recursive clean && rm -rf packages/*/node_modules node_modules"
  },
  "devDependencies": {
    "typescript": "^5.7.3"
  }
}
